<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:isScrollContainer="true"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/faast_prime"
            android:layout_weight="1.11" />

        <Space
            android:layout_height="8dp"
            android:layout_width="match_parent"
            />

        <TextView
            android:text="Instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:background="#4cc8ce"
            android:gravity="center|center_vertical"
            android:paddingTop="4dp"
            android:fontFamily="Open Sans"/>

        <TextView
            android:text="* Your data per month will remain the same but the speed will be upgraded to 100Mbps."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="4dp"
            android:textColor="#8A8D91"
            android:layout_marginLeft="2dp"
            android:gravity="left"
            android:fontFamily="Open Sans"/>
        <TextView
            android:id="@+id/FAASTPrimePrice"
            android:text="* Prime membership costs Rs.500 + Taxes yearly."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:padding="4dp"
            android:textColor="#8A8D91"
            android:layout_marginLeft="2dp"
            android:gravity="left"
            android:fontFamily="Open Sans"/>
        <TextView
            android:text="* Early access to discounts and launches."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#8A8D91"
            android:padding="4dp"
            android:layout_marginLeft="2dp"
            android:gravity="left"
            android:fontFamily="Open Sans"/>


        <Button
            android:id="@+id/faast_prime_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/faast_blue"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />

    </LinearLayout>
</ScrollView>