<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home_internet_status">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <!--<android.support.v4.view.ViewPager-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/viewPager"-->
            <!--android:animateFirstView="false"-->
            <!--/>-->

        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_height="match_parent"
            android:layout_width="fill_parent">

        </ViewFlipper>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <LinearLayout
            android:id="@+id/plan_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.5"
            android:weightSum="10"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:weightSum="10">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:textColor="#8A8D91"
                    android:text="Current Plan"
                    android:id="@+id/current_plan"
                    android:textSize="14sp"
                    />


            </LinearLayout>
            <Space
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:weightSum="10">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/current_plan_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:textColor="#000000"
                    android:text="Current Plan"
                    android:textSize="12sp"

                    />

            </LinearLayout>
            <Space
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:weightSum="10">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/total_payment_lable"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:textColor="#8A8D91"
                    android:text="Total Payment Due"
                    android:textSize="14sp"/>
            </LinearLayout>

            <Space
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:weightSum="10">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/total_payment_due"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:textColor="#000000"
                    android:text="Total Payment Due"
                    android:textSize="14sp"

                    />

            </LinearLayout>
            <Space
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:weightSum="10">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:textColor="#8A8D91"
                    android:text="Due Date"
                    android:id="@+id/due_date_textview"
                    android:textSize="14sp"

                    />

            </LinearLayout>
            <Space
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:weightSum="10">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/payment_due_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:textColor="#000000"
                    android:text="Due Date"
                    android:textSize="14sp"

                    />



            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:orientation="horizontal"
            android:weightSum="10">
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:weightSum="10">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>


                <RelativeLayout
                    android:layout_height="0dp"
                    android:layout_weight="6.7"
                    android:layout_width="match_parent"
                    >
                    <pl.pawelkleczkowski.customgauge.CustomGauge
                        android:id="@+id/gauge2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp"
                        app:gaugeEndValue="800"
                        app:gaugePointEndColor="#dd191d"
                        app:gaugePointStartColor="#e51c23"
                        app:gaugeStartAngle="90"
                        app:gaugeStartValue="2"
                        app:gaugeStrokeCap="ROUND"
                        app:gaugeStrokeColor="#00ba30"
                        app:gaugeStrokeWidth="2dp"
                        app:gaugeSweepAngle="360"
                        />

                    <TextView
                        android:id="@+id/graph_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:singleLine="false"
                        android:maxLines="3"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="12sp"

                        />

                </RelativeLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.7"/>

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".01"
        android:background="#AAB2B3"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        >
        <GridView
            android:id="@+id/gridView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:scrollbars="none"
            android:isScrollContainer="false"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>