<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.faast.mobile.apps.Wallet">

    <Space
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:srcCompat="@mipmap/wallet_colored2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="0.7"
        android:fontFamily="Open Sans"
        android:textColor="@color/gray"
        android:text="Wallet Balance"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/availaible_wallet_balance"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="Open Sans"
        android:text="wallet_balance"
        android:gravity="center|top"
        android:textColor="@color/black"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="  Wallet History:-"
        android:fontFamily="Open Sans"
        android:textColor="@color/gray"
        android:textSize="20dp"/>
    <ScrollView
        android:id="@+id/invoice_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:fillViewport="true"
        android:scrollbars  ="none"
        >
        <TableLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:id="@+id/maintable" >
        </TableLayout>
    </ScrollView>

</LinearLayout>
