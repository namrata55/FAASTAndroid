<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/support_ticket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:layout_margin="5dp"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="2"

        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/slow_speed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_gray_border"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom|center"
                android:layout_weight="2"
                android:src="@mipmap/speedometer3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textSize="15dp"
                android:text="Slow Internet"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/no_power_fiber_modem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_gray_border"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom|center"
                android:layout_weight="2.11"
                android:src="@mipmap/modem11"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1.5"
                android:textSize="15dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="No Power On Fiber Modem"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/red_light_on"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_gray_border"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom|center"
                android:layout_weight="2"
                android:src="@mipmap/red_dot2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1.5"
                android:textSize="15dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="Red LOS On Fiber Modem"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"/>

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/no_light_on_adapter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_gray_border"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom|center"
                android:layout_weight="2"
                android:src="@mipmap/adaptor"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1.5"
                android:textSize="15dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="No Light On PoE Adaptor"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/others"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_gray_border"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom|center"
                android:layout_weight="2"
                android:src="@mipmap/others"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1.5"
                android:textSize="15dp"
                android:text="Others"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ticket_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_gray_border"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom|center"
                android:layout_weight="2"
                android:src="@mipmap/ticket_history"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1.5"
                android:textSize="15dp"
                android:text="Tickets History"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
