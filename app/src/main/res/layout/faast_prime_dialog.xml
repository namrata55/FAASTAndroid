<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#012e4f"
        android:scaleType="center"
        app:srcCompat="@mipmap/mbps100" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:linksClickable="false"
        android:autoLink="all"
        android:text="@string/faast_prime_dialog"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@color/faast_green"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/faast_green"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=" Signup for FAAST prime and get a free upgrade \n to our 100Mbps plans." />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal" >
    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#012e4f"
        android:id="@+id/cancel"
        android:text="Cancel"
        android:textColor="@color/white"
        android:layout_gravity="center"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#012e4f"
            android:id="@+id/signup"
            android:text="Signup"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>