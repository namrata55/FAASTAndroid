<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/shadow">

    <LinearLayout
        android:id="@+id/name_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Service_Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_weight="1.2"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_weight=".8"
            android:gravity="right"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/speed_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_line"
        android:text="Service Id"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speed_details"
        android:layout_marginTop="5dp"
        android:text="Total Data"
        android:visibility="gone"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data"
        android:layout_marginTop="5dp"
        android:gravity="bottom|left"
        android:text="Speed"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/post_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlimited"
        android:layout_below="@+id/speed"
        android:textColor="@android:color/white"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/linearLayout2">
        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Price"
            android:visibility="gone"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/version_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:text="Request"
        android:id="@+id/item_info"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:focusable="false"
        android:background="#000000"
        android:textColor="@android:color/white"
        android:focusableInTouchMode="false"
        android:layout_alignBottom="@+id/post_speed"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/total_data_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_info"
        android:layout_alignLeft="@+id/item_info"
        android:layout_alignStart="@+id/item_info"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:gravity="right|top"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/speed_details" />

</RelativeLayout>